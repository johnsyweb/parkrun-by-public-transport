{
  "name": "parkrun-by-public-transport",
  "version": "1.0.0",
  "description": "Find parkrun events near public transport stops",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm generate:icons && tsc && pnpm generate:sitemap && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:lighthouse": "pnpm build && tsx scripts/run-lighthouse.ts",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{ts,tsx,json,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,tsx,json,css,html,md}'",
    "check": "pnpm typecheck && pnpm test && pnpm test:lighthouse && pnpm lint && pnpm format:check",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "generate:icons": "tsx scripts/generate-icons.ts",
    "generate:screenshot": "tsx scripts/generate-screenshot.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/leaflet": "^1.9.21",
    "eslint": "^9.39.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lighthouse": "^12.3.0",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "sharp": "^0.34.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
